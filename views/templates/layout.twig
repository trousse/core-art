<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <link rel='stylesheet' type="text/css" href='{{ Data.config.url }}/stylesheets/style.css' />
    {% if Data.Menu.horizontal %}
      <link rel='stylesheet' type="text/css" href='{{ Data.config.url }}/stylesheets/Menus/horizontal.css' />
    {% else %}
      <link rel='stylesheet' type="text/css" href='{{ Data.config.url }}/stylesheets/Menus/vertical.css' />
    {% endif %}
    {% if styles %}  {% for style in styles %}
      <link rel='stylesheet' type="text/css" href='/stylesheets/{{style}}' />
    {% endfor %} {% endif %}
    {% if Data.scripts %}  {% for js in Data.scripts %}
      <script type = "module" src="javascripts/{{js}}"></script>
    {% endfor %} {% endif %}
    <script src="{{ Data.config.url }}/javascripts/javascript.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script defer src="{{ Data.config.url }}/javascripts/@fortawesome/fontawesome-free/js/all.js"></script>
    <link rel="preconnect" type="text/css" href="https://fonts.googleapis.com">
    <link rel="preconnect" type="text/css" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4&display=swap" rel="stylesheet">
    <link rel='stylesheet' type="text/css" href='{{ Data.config.url }}/javascripts/@fortawesome/fontawesome-free/css/all.css' />
  </head>
  <body>
  {% block Menu %}
    {% if Data.Menu.horizontal %}
      {% include '../Menus/Menu_horizontal.twig' %}
    {% else %}
      {% include '../Menus/Menu_vertical.twig' %}
    {% endif %}
  {% endblock %}
    <div class="content">
      {% block body %}{% endblock %}
    </div>
  {% block Footer %}
  <div id="footer">
    <div id="footer-container" class="container">
      <a href="{{ Data.config.url }}/mention_legal" class="clickable">Mentions l√©gales</a>
      <span><i class="fas fa-solid fa-circle"></i></span>
      <a href="{{ Data.config.url }}/presentation" class="clickable">Qui sommes nous</a>
      <span><i class="fas fa-solid fa-circle"></i></span>
      <a href="{{ Data.config.url }}/contact" class="clickable">Nous contacter</a>
      <span><i class="fas fa-solid fa-circle"></i></span>
      <a href="{{ Data.config.url }}/condition_general" class="clickable">Conditions d'utilisation</a>
    </div>
  </div>
  {% endblock %}
  </body>
</html>
